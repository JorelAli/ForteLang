{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ForteLang",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.fortelang",
				"match": "->>|->|\\|>|\\|"
			}, {
				"name": "invalid.illegal",
				"match": "impure|@[a-zA-Z0-9'_]+"
			}, {
				"name": "storage.type.fortelang",
				"match": "\\b(include|in|match)\\b"
			}, {
				"name": "entity.name.function",
				"match": "[a-zA-Z0-9'_]+(?=\\s+\\=)"
			}, {
				"name": "constant.language",
				"match": "true|false"
			}]
		},
		"strings": {
			"name": "string.quoted.double.fortelang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.fortelang",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign",
					"begin": "#",
					"end": "\n"
				},
				{
					"name": "comment.block.number-sign",
					"begin": "###",
					"end": "###"
				}

			]
		}
	},
	"scopeName": "source.fortelang"
}